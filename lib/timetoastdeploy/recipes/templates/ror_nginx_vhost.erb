upstream <%= "#{application}_cluster" %> {
  <% start_port = proxy_port %>
  <% end_port = proxy_port + proxy_servers - 1 %>
  <% start_port.upto(end_port) do |port| %>
  server <%= "#{proxy_address}:#{port.to_s};" %>
  <% end %>
}
 
server {
  
  listen 80;
  server_name <%= nginx_server_name %>; 
  root   <%= "#{current_path}/public" %>;

  access_log  <%= "#{current_path}/log/nginx_access.log" %>;
  error_log  <%= "#{current_path}/log/nginx_error.log" %>;

  location / {
    proxy_set_header  X-Real-IP  $remote_addr;
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header  Host $http_host;
    proxy_redirect off;
    proxy_read_timeout 300;
 
    if (-f $request_filename/index.html) {
      rewrite (.*) $1/index.html break;
    }
 
    if (-f $request_filename.html) {
      rewrite (.*) $1.html break;
    }
 
    if (-f $request_filename.txt) {
      rewrite (.*) $1.txt break;
    }
 
    proxy_pass http://<%= "#{application}_cluster" %>;
  }
}
